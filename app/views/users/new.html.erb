<div class="ui hidden divider"></div>
<h1>Sign up</h1>

<div class="sixteen wide column">
  <div class="row">
  <%= form_for(@user) do |f| %>

    <%= f.label :username %>
    <%= f.text_field :username, class: 'field' %>

    <%= f.label :email %>
    <%= f.email_field :email, class: 'field' %>

    <%= f.label :password %>
    <%= f.password_field :password, class: 'field' %>

    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation, class: 'field' %>

    <%= f.submit "Create my account", class: "ui submit button" %>
  <% end %>
  </div>
</div>