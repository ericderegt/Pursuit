<!DOCTYPE html>
<html>
<head>
  <title>Pursuit</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="ui fixed menu large navbar">
    <div class="header item">Pursuit</div> 
    <a href="/" class="item">Home</a>
    <a href="/#create" class="item">Create</a>
    <a href="/#settings" class="item">Settings</a>

    <div class="right menu">
    <% if @current_user %>
      <form action="/logout" method="POST">
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <input name="_method" type="hidden" value="delete" />
        <input type="submit" class="ui small button item" value="Log Out">
      </form>
      <% else %>
        <a href="/login/new" class="ui item">
          Login
        </a>
      <% end %>
    </div>
  </nav>
  
  <main class="ui page grid">
    <div class="row">
      <%= yield %>
    </div>
  </main>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
